<Window x:Class="VIGamingVision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:VIGamingVision.ViewModels"
        mc:Ignorable="d"
        Title="VIGamingVision - Accessibility Tool for Gamers"
        Height="500"
        Width="550"
        MinHeight="450"
        MinWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}"
        AutomationProperties.Name="VIGamingVision Main Window"
        AutomationProperties.HelpText="An accessibility tool that uses computer vision to read game UI elements aloud">

    <Window.Resources>
        <!-- Use accessible styles from App.xaml, with local overrides -->
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource AccessibleGroupBoxStyle}"/>
        <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource AccessibleButtonStyle}"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Game Selection -->
        <GroupBox Grid.Row="0" Header="Select Game" Style="{StaticResource GroupBoxStyle}">
            <ComboBox x:Name="GameComboBox"
                      ItemsSource="{Binding Games}"
                      SelectedItem="{Binding SelectedGame}"
                      DisplayMemberPath="DisplayName"
                      Style="{StaticResource AccessibleComboBoxStyle}"
                      AutomationProperties.Name="Game Selection"
                      AutomationProperties.HelpText="Select the game you want to play with accessibility features"/>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,15">
            <Button Command="{Binding ToggleDetectionCommand}"
                    AutomationProperties.Name="Toggle Detection"
                    FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                        <Setter Property="Content" Value="START DETECTION"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDetectionRunning}" Value="True">
                                <Setter Property="Content" Value="STOP DETECTION"/>
                                <Setter Property="Background" Value="#FFFFCCCC"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="GAME SETTINGS"
                    Command="{Binding OpenGameSettingsCommand}"
                    Style="{StaticResource ButtonStyle}"
                    AutomationProperties.Name="Open Game Settings"/>
            <Button Content="APP SETTINGS"
                    Command="{Binding OpenAppSettingsCommand}"
                    Style="{StaticResource ButtonStyle}"
                    AutomationProperties.Name="Open Application Settings"/>
        </StackPanel>

        <!-- Status -->
        <GroupBox Grid.Row="2" Header="Status" Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Detection:" Margin="0,2" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DetectionStatus}" Margin="10,2"
                           AutomationProperties.Name="Detection Status"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" Margin="0,2" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ModelStatus}" Margin="10,2"
                           AutomationProperties.Name="Model Status"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Objects:" Margin="0,2" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentDetectionCount}" Margin="10,2"
                           AutomationProperties.Name="Current Detection Count"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Read:" Margin="0,2" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LastReadText}" Margin="10,2"
                           TextTrimming="CharacterEllipsis"
                           AutomationProperties.Name="Last Read Text"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="GPU:" Margin="0,2" FontWeight="SemiBold"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding GpuInfo}" Margin="10,2"
                           TextTrimming="CharacterEllipsis"
                           AutomationProperties.Name="GPU Information"/>
            </Grid>
        </GroupBox>

        <!-- Hotkeys -->
        <GroupBox Grid.Row="3" Style="{StaticResource GroupBoxStyle}"
                  AutomationProperties.Name="Hotkeys for selected game">
            <GroupBox.Header>
                <TextBlock>
                    <Run Text="Hotkeys ("/>
                    <Run Text="{Binding SelectedGame.DisplayName, FallbackValue='No Game'}"/>
                    <Run Text=")"/>
                </TextBlock>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,2">
                    <Run Text="{Binding HotkeyReadPrimary, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=": Read Primary"/>
                </TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="10,2">
                    <Run Text="{Binding HotkeyStopReading, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=": Stop Reading"/>
                </TextBlock>

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,2">
                    <Run Text="{Binding HotkeyReadSecondary, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=": Read Secondary"/>
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Margin="10,2">
                    <Run Text="{Binding HotkeyToggleDetection, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=": Toggle Detection"/>
                </TextBlock>

                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,2">
                    <Run Text="{Binding HotkeyQuit, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text=": Quit"/>
                </TextBlock>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
