<Window x:Class="VIGamingVision.Views.AppSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Application Settings"
        Height="300"
        Width="400"
        MinHeight="250"
        MinWidth="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        AutomationProperties.Name="Application Settings Window">

    <Window.Resources>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Performance Settings -->
        <GroupBox Grid.Row="0" Header="Performance" Style="{StaticResource GroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="Use GPU Acceleration (DirectML)"
                          IsChecked="{Binding UseDirectML}"
                          Margin="0,5"
                          AutomationProperties.Name="Enable GPU Acceleration"/>
                <TextBlock Text="{Binding GpuName}" Margin="20,5,0,5" Foreground="Gray"
                           AutomationProperties.Name="Detected GPU"/>
            </StackPanel>
        </GroupBox>

        <!-- Accessibility Settings -->
        <GroupBox Grid.Row="1" Header="Accessibility" Style="{StaticResource GroupBoxStyle}">
            <StackPanel>
                <CheckBox Content="High Contrast Mode"
                          IsChecked="{Binding HighContrast}"
                          Margin="0,5"
                          AutomationProperties.Name="Enable High Contrast Mode"/>
                <CheckBox Content="Large Text"
                          IsChecked="{Binding LargeText}"
                          Margin="0,5"
                          AutomationProperties.Name="Enable Large Text"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="5" Padding="10,5"
                    Click="SaveButton_Click"
                    AutomationProperties.Name="Save Settings"/>
            <Button Content="Cancel" Width="80" Margin="5" Padding="10,5"
                    Click="CancelButton_Click"
                    AutomationProperties.Name="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
