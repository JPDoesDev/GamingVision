<Window x:Class="GamingVision.Views.WindowPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Window"
        Height="400"
        Width="500"
        MinHeight="300"
        MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        AutomationProperties.Name="Window Picker Dialog">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select a window from the list below:" Margin="0,0,0,10"
                   AutomationProperties.Name="Instructions"/>

        <ListBox Grid.Row="1" x:Name="WindowListBox"
                 ItemsSource="{Binding Windows}"
                 DisplayMemberPath="Title"
                 SelectedItem="{Binding SelectedWindow}"
                 AutomationProperties.Name="Available Windows List"
                 FontSize="14"
                 MouseDoubleClick="WindowListBox_MouseDoubleClick"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Refresh" Width="80" Margin="0,0,10,0" Padding="10,5"
                    Click="RefreshButton_Click"
                    AutomationProperties.Name="Refresh Window List"/>
            <Button Content="Select" Width="80" Margin="0,0,10,0" Padding="10,5"
                    Click="SelectButton_Click"
                    IsDefault="True"
                    AutomationProperties.Name="Select Window"/>
            <Button Content="Cancel" Width="80" Padding="10,5"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    AutomationProperties.Name="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
