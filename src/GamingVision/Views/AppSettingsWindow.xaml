<Window x:Class="GamingVision.Views.AppSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Application Settings"
        Height="350"
        Width="550"
        MinHeight="300"
        MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}"
        AutomationProperties.Name="Application Settings Window">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Performance Settings -->
        <GroupBox Grid.Row="0" Header="Performance">
            <StackPanel>
                <CheckBox Content="Use GPU Acceleration (DirectML)"
                          IsChecked="{Binding UseDirectML}"
                          AutomationProperties.Name="Enable GPU Acceleration"/>
                <TextBlock Text="{Binding GpuName}"
                           Margin="30,5,0,5"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           AutomationProperties.Name="Detected GPU"/>
            </StackPanel>
        </GroupBox>

        <!-- Debugging Settings -->
        <GroupBox Grid.Row="1" Header="Debugging">
            <StackPanel>
                <CheckBox Content="Enable Logging"
                          IsChecked="{Binding EnableLogging}"
                          AutomationProperties.Name="Enable Logging"
                          AutomationProperties.HelpText="Log application events to file for troubleshooting"/>
                <TextBlock Text="Log file: logs/gamingvision.log"
                           Margin="30,5,0,5"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           AutomationProperties.Name="Log file location"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save"
                    Click="SaveButton_Click"
                    AutomationProperties.Name="Save Settings"/>
            <Button Content="Cancel"
                    Click="CancelButton_Click"
                    AutomationProperties.Name="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
