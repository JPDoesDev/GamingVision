<Window x:Class="GamingVision.Views.TrainingParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Training Parameters"
        SizeToContent="Height"
        Width="420"
        MinWidth="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}"
        AutomationProperties.Name="Training Parameters Window">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Configure Training Parameters"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Core Parameters -->
        <GroupBox Grid.Row="1" Header="Core Parameters" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Epochs -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Epochs:"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding Epochs, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Margin="0,5"
                         AutomationProperties.Name="Epochs"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="(50-600)"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="5,5,0,5"/>

                <!-- Image Size -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Image Size:"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1"
                          SelectedValue="{Binding ImageSize}"
                          SelectedValuePath="Tag"
                          VerticalAlignment="Center"
                          Margin="0,5"
                          AutomationProperties.Name="Image Size">
                    <ComboBoxItem Content="640 (Fast)" Tag="640"/>
                    <ComboBoxItem Content="1280 (Balanced)" Tag="1280"/>
                    <ComboBoxItem Content="1440 (Best Quality)" Tag="1440"/>
                </ComboBox>

                <!-- Batch -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Batch (GPU %):"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Batch, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                         VerticalAlignment="Center"
                         Margin="0,5"
                         AutomationProperties.Name="Batch Size"/>
                <TextBlock Grid.Row="2" Grid.Column="2"
                           Text="(0.5-0.9)"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="5,5,0,5"/>

                <!-- Patience -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Patience:"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1"
                         Text="{Binding Patience, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Margin="0,5"
                         AutomationProperties.Name="Early Stop Patience"/>
                <TextBlock Grid.Row="3" Grid.Column="2"
                           Text="(10-100)"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="5,5,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Advanced Parameters -->
        <GroupBox Grid.Row="2" Header="Advanced Parameters" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Learning Rate -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Learning Rate:"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding LearningRate, UpdateSourceTrigger=PropertyChanged, StringFormat=N4}"
                         VerticalAlignment="Center"
                         Margin="0,5"
                         AutomationProperties.Name="Learning Rate"/>
                <TextBlock Grid.Row="0" Grid.Column="2"
                           Text="(0.001-0.1)"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="5,5,0,5"/>

                <!-- Device -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Device:"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1"
                          SelectedValue="{Binding Device}"
                          SelectedValuePath="Tag"
                          VerticalAlignment="Center"
                          Margin="0,5"
                          AutomationProperties.Name="Training Device">
                    <ComboBoxItem Content="GPU (CUDA)" Tag="cuda"/>
                    <ComboBoxItem Content="CPU" Tag="cpu"/>
                </ComboBox>

                <!-- Workers -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Workers:"
                           VerticalAlignment="Center"
                           Margin="0,5"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Workers, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         Margin="0,5"
                         AutomationProperties.Name="Data Loader Workers"/>
                <TextBlock Grid.Row="2" Grid.Column="2"
                           Text="(0-16)"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="5,5,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Checkboxes -->
        <StackPanel Grid.Row="3" Margin="0,5,0,0">
            <CheckBox Content="Cache images in memory (faster, uses more RAM)"
                      IsChecked="{Binding CacheImages}"
                      Margin="0,5"
                      AutomationProperties.Name="Cache Images"/>
            <CheckBox Content="Use Mixed Precision (FP16, faster on modern GPUs)"
                      IsChecked="{Binding UseMixedPrecision}"
                      Margin="0,5"
                      AutomationProperties.Name="Use Mixed Precision"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Reset Defaults"
                    Click="ResetDefaults_Click"
                    MinWidth="100"
                    AutomationProperties.Name="Reset to Default Parameters"/>

            <Button Grid.Column="2"
                    Content="Start Training"
                    Click="StartTraining_Click"
                    IsDefault="True"
                    MinWidth="100"
                    FontWeight="Bold"
                    AutomationProperties.Name="Start Training"/>

            <Button Grid.Column="3"
                    Content="Cancel"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Margin="10,0,0,0"
                    MinWidth="80"
                    AutomationProperties.Name="Cancel"/>
        </Grid>
    </Grid>
</Window>
