<Window x:Class="GamingVision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GamingVision.ViewModels"
        xmlns:converters="clr-namespace:GamingVision.Converters"
        mc:Ignorable="d"
        Title="GamingVision - Accessibility Tool for Gamers"
        Icon="Resources/app.ico"
        SizeToContent="Height"
        Width="650"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{DynamicResource BackgroundBrush}"
        AutomationProperties.Name="GamingVision Main Window"
        AutomationProperties.HelpText="An accessibility tool that uses computer vision to read game UI elements aloud">

    <Window.Resources>
        <!-- Stop Detection Button Color -->
        <SolidColorBrush x:Key="StopButtonBrush" Color="#FF882222"/>
        <SolidColorBrush x:Key="StopButtonHoverBrush" Color="#FFAA3333"/>
        <converters:ColorStringToBrushConverter x:Key="ColorStringToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="{DynamicResource BackgroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_Close" Command="{Binding CloseCommand}" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_App Settings" Command="{Binding OpenAppSettingsCommand}"/>
                <MenuItem Header="_Game Settings" Command="{Binding OpenGameSettingsCommand}"/>
                <MenuItem Header="_Overlay Settings" Command="{Binding OpenOverlaySettingsCommand}"/>
            </MenuItem>
            <MenuItem Header="_Operations">
                <MenuItem Header="_Post Processing" Command="{Binding OpenPostProcessingCommand}"/>
                <MenuItem Header="_Train Model" Command="{Binding OpenTrainingWindowCommand}"/>
            </MenuItem>
        </Menu>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Game Selection and Engine Control (shared across tabs) -->
            <GroupBox Grid.Row="0" Header="Select Game">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="GameComboBox"
                              Grid.Row="0"
                              ItemsSource="{Binding Games}"
                              SelectedItem="{Binding SelectedGame}"
                              DisplayMemberPath="DisplayName"
                              AutomationProperties.Name="Game Selection"
                              AutomationProperties.HelpText="Select the game you want to play with accessibility features"/>

                    <Button Grid.Row="0"
                            Command="{Binding ToggleEngineCommand}"
                            HorizontalAlignment="Right"
                            FontWeight="Bold"
                            AutomationProperties.Name="Toggle Engine">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Content" Value="START ENGINE"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEngineRunning}" Value="True">
                                        <Setter Property="Content" Value="STOP ENGINE"/>
                                        <Setter Property="Background" Value="{StaticResource StopButtonBrush}"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsEngineRunning}" Value="True"/>
                                            <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Background" Value="{StaticResource StopButtonHoverBrush}"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </GroupBox>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Margin="0,10,0,10">
            <!-- Screen Reader Tab -->
            <TabItem Header="Screen Reader">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Enable Screen Reader Checkbox -->
                    <CheckBox Grid.Row="0"
                              Content="Enable Screen Reader"
                              IsChecked="{Binding IsScreenReaderEnabled}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"
                              FontWeight="Bold"
                              AutomationProperties.Name="Enable Screen Reader"/>

                    <!-- Status -->
                    <GroupBox Grid.Row="1" Header="Status">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Detection:" Margin="0,4" FontWeight="Bold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DetectionStatus}" Margin="15,4"
                                       AutomationProperties.Name="Detection Status"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" Margin="0,4" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ModelStatus}" Margin="15,4"
                                       AutomationProperties.Name="Model Status"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Objects:" Margin="0,4" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentDetectionCount}" Margin="15,4"
                                       AutomationProperties.Name="Current Detection Count"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Read:" Margin="0,4" FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LastReadText}" Margin="15,4"
                                       TextTrimming="CharacterEllipsis"
                                       AutomationProperties.Name="Last Read Text"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="GPU:" Margin="0,4" FontWeight="Bold"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding GpuInfo}" Margin="15,4"
                                       TextTrimming="CharacterEllipsis"
                                       AutomationProperties.Name="GPU Information"/>
                        </Grid>
                    </GroupBox>

                    <!-- Hotkeys -->
                    <GroupBox Grid.Row="2" Header="Keyboard Shortcuts" AutomationProperties.Name="Keyboard Shortcuts">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,4">
                                <Run Text="{Binding HotkeyReadPrimary, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text=": Read Primary"/>
                            </TextBlock>
                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="15,4">
                                <Run Text="{Binding HotkeyStopReading, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text=": Stop Reading"/>
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,4">
                                <Run Text="{Binding HotkeyReadSecondary, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text=": Read Secondary"/>
                            </TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="1" Margin="15,4">
                                <Run Text="{Binding HotkeyToggleDetection, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text=": Toggle Engine"/>
                            </TextBlock>

                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,4">
                                <Run Text="{Binding HotkeyReadTertiary, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text=": Read Tertiary"/>
                            </TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="1" Margin="15,4">
                                <Run Text="{Binding HotkeyQuit, Mode=OneWay}" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                <Run Text=": Quit"/>
                            </TextBlock>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Overlay Tab -->
            <TabItem Header="Overlay">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Enable Overlay Checkbox -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <CheckBox Content="Enable Overlay"
                                  IsChecked="{Binding IsOverlayEnabled}"
                                  FontWeight="Bold"
                                  Margin="0,0,20,0"
                                  AutomationProperties.Name="Enable Overlay"/>
                        <CheckBox Content="Enable Crosshair"
                                  IsChecked="{Binding IsCrosshairEnabled}"
                                  FontWeight="Bold"
                                  AutomationProperties.Name="Enable Crosshair"/>
                    </StackPanel>

                    <!-- Overlay Settings -->
                    <GroupBox Header="Hotkeys" Grid.Row="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Text="Overlay Toggle Hotkey:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1"
                                     Text="{Binding OverlayToggleHotkey, UpdateSourceTrigger=PropertyChanged}"
                                     MaxLength="20"/>
                            <TextBlock Grid.Row="1" Text="Crosshair Toggle Hotkey:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Text="{Binding CrosshairToggleHotkey, UpdateSourceTrigger=PropertyChanged}"
                                     MaxLength="20"
                                     Margin="0,10,0,0"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- Capture Tab -->
            <TabItem Header="Capture">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Enable Training Checkbox and Create New -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <CheckBox Content="Enable screenshots for training"
                                  IsChecked="{Binding IsTrainingEnabled}"
                                  VerticalAlignment="Center"
                                  FontWeight="Bold"
                                  AutomationProperties.Name="Enable Training Screenshots"
                                  AutomationProperties.HelpText="When enabled, press the capture hotkey to save screenshots for model training"/>
                        <Button Content="CREATE NEW"
                                Command="{Binding CreateNewTrainingProfileCommand}"
                                Margin="15,0,0,0"
                                AutomationProperties.Name="Create New Training Profile"
                                AutomationProperties.HelpText="Create a new game profile for training data collection"/>
                    </StackPanel>

                    <!-- Training Data Location -->
                    <GroupBox Grid.Row="1" Header="Training Data Save Location">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0"
                                     Text="{Binding TrainingDataPath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     VerticalAlignment="Center"
                                     AutomationProperties.Name="Training Data Folder Path"
                                     AutomationProperties.HelpText="The folder where training screenshots will be saved"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseTrainingFolderCommand}"
                                    Margin="10,0,0,0"
                                    MinWidth="80"
                                    AutomationProperties.Name="Browse for Training Folder"/>
                        </Grid>
                    </GroupBox>

                    <!-- Capture Hotkey -->
                    <GroupBox Grid.Row="2" Header="Capture Settings">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Capture Hotkey:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding TrainingCaptureHotkey, UpdateSourceTrigger=PropertyChanged}"
                                     MaxWidth="100"
                                     HorizontalAlignment="Left"
                                     AutomationProperties.Name="Capture Screenshot Hotkey"
                                     AutomationProperties.HelpText="Hotkey to capture a screenshot (e.g., F1, F2, Ctrl+S)"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        </Grid>
    </DockPanel>
</Window>
